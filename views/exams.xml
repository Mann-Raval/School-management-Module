<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="exam_tree_view" model="ir.ui.view">
        <field name="name">school.exam.tree</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <tree string="Exams">
                <field name="name"/>
                <field name="exam_date"/>
                <field name="class_id"/>
                <field name="subject_id"/>
                <field name="total_marks"/>
            </tree>
        </field>
    </record>

    <record id="exam_form_view" model="ir.ui.view">
        <field name="name">school.exam.form</field>
        <field name="model">school.exam</field>
        <field name="arch" type="xml">
            <form string="Exams">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="exam_date"/>
                        <field name="class_id" widget="many2many_tags"/>
                        <field name="subject_id"/>
                        <field name="total_marks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_exam" model="ir.actions.act_window">
        <field name="name">Exams</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.exam</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your exams here!
            </p>
        </field>
    </record>

    <menuitem id="school_exam_menu" name="Exams" action="action_exam" parent="school_root_menu" sequence="60"/>
</odoo>
