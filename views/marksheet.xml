<odoo>
    <record id="view_marksheet_tree" model="ir.ui.view">
        <field name="name">school.marksheet.tree</field>
        <field name="model">school.marksheet</field>
        <field name="arch" type="xml">
            <tree string="Marksheet">
                <field name="name"/>
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="total_marks"/>
                <field name="percentage"/>
                <field name="grade"/>
            </tree>
        </field>
    </record>

    <record id="view_marksheet_form" model="ir.ui.view">
        <field name="name">school.marksheet.form</field>
        <field name="model">school.marksheet</field>
        <field name="arch" type="xml">
            <form string="Marksheet">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_id"/>
                        <field name="class_id"/>
                        <field name="total_marks" readonly="1"/>
                        <field name="percentage" readonly="1"/>
                        <field name="grade" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Marks">
                            <field name="marksheet_line_ids">
                                <tree editable="bottom">
                                    <field name="subject_id"/>
                                    <field name="obtained_marks"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_marksheet" model="ir.actions.act_window">
        <field name="name">Marksheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.marksheet</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your marksheets here!
            </p>
        </field>
    </record>

    <menuitem id="school_marksheet_menu" name="Marksheet" action="action_marksheet" parent="school_root_menu" sequence="50"/>
</odoo>
