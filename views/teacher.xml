<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="teacher_tree_view" model = "ir.ui.view">
        <field name="name">school.teacher.tree</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <tree string="Teachers">
                <field name = "name_seq"/>
                <field name = "name"/>
                <field name = "email_id"/>
                <field name = "date_of_birth"/>
                <field name = "contact_no"/>
            </tree>
        </field>
    </record>

    <record id="teacher_form_view" model = "ir.ui.view">
        <field name="name">school.teacher.form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form string="Teachers">
                <sheet>
                    <widget name="web_ribbon" text="Male" bg_color="bg-danger" attrs="{'invisible': [('gender', '=', 'female')]}"/>
                    <widget name="web_ribbon" text="Female" bg_color="bg-danger" attrs="{'invisible': [('gender', '=', 'male')]}"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name_seq"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="email_id"/>
                            <field name="date_of_birth"/>
                            <field name="contact_no"/>
                        </group>
                        <group>
                            <field name="department"/>
                            <field name="subject_taught"/>
                            <field name="hire_date"/>
                            <field name="gender"/>
                        </group>
                        <field name="address"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="teacher_search_view" model="ir.ui.view">
        <field name="name">school.teacher.search</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <search string = "Teachers">
                <field name = "name" filter_domain= "[('name','ilike',self)]"/>
                <field name = "name_seq" filter_domain= "[('name_seq','ilike',self)]"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender','=','male')]"/>
                <filter string="Female" name="female" domain="[('gender','=','female')]"/>
                <searchpanel>
                    <field name="department" icon="fa-users"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_teacher" model = "ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your teachers here!
            </p>
        </field>
    </record>
    
    <menuitem id = "school_teacher_menu"
    name= "Teachers"
    action = "action_teacher"
    parent = "school_root_menu"
    sequence = "11"/>
</odoo>