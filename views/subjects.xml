<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="subject_tree_view" model="ir.ui.view">
        <field name="name">school.subject.tree</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <tree string="Subjects">
                <field name="name"/>
                <field name="subject_code"/>
                <field name="teacher_id"/>
            </tree>
        </field>
    </record>

    <record id="subject_form_view" model="ir.ui.view">
        <field name="name">school.subject.form</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <form string="Subjects">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="subject_code"/>
                        <field name="teacher_id" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="class_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.subject</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your subjects here!
            </p>
        </field>
    </record>

    <menuitem id="school_subject_menu" name="Subjects" action="action_subject" parent="school_root_menu" sequence="30"/>
</odoo>
