<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="class_tree_view" model="ir.ui.view">
        <field name="name">school.class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree string="Classes">
                <field name="name"/>
                <field name="class_code"/>
                <field name="teacher_id"/>
            </tree>
        </field>
    </record>

    <record id="class_form_view" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Classes">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="class_code"/>
                        <field name="teacher_id"/>
                    </group>
                    <group>
                        <field name="student_ids" widget="many2many_tags"/>
                        <field name="subject_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your classes here!
            </p>
        </field>
    </record>

    <menuitem id="school_class_menu" name="Classes" action="action_class" parent="school_root_menu" sequence="20"/>
</odoo>
