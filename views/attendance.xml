<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="attendance_tree_view" model="ir.ui.view">
        <field name="name">school.attendance.tree</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <tree string="Attendance">
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="attendance_form_view" model="ir.ui.view">
        <field name="name">school.attendance.form</field>
        <field name="model">school.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="class_id"/>
                        <field name="date"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.attendance</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your attendance here!
            </p>
        </field>
    </record>

    <menuitem id="school_attendance_menu" name="Attendance" action="action_attendance" parent="school_root_menu" sequence="40"/>
</odoo>
